PORT=8080
STORAGE_BACKEND=gcs

# Optional if using explicit service account fields:
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Required for GCS backend
FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app

# Required for Drive backend
GOOGLE_DRIVE_FOLDER_ID=

# Option C (OAuth2 user credentials for Drive, useful when Shared Drives are unavailable)
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REFRESH_TOKEN=

# Optional: replicate GCS uploads to Drive while keeping GCS as primary backend
REPLICATE_TO_DRIVE=false

# If true, upload/delete fails when Drive replication fails.
# If false, GCS remains successful even if Drive replication fails.
REPLICATE_TO_DRIVE_STRICT=false
